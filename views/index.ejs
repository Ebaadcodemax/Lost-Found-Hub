<!DOCTYPE html>
<html>
  <head>
    <title>Lost Hub</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Indie+Flower&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Share+Tech&family=Story+Script&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <h1>Lost Hub</h1>
      <a href="/post/new" class="newpostbtn">Add New Post</a>
      <hr />
      <div class="cards">
      <%posts.forEach(post=> {%>

      <div class="post-card">
        <h3><%= post.title %> (<%= post.type %>)</h3>
        <p><%= post.description %></p>
        <p>Location: <%= post.location %></p>
        <% if(post.photoUrl){ %>
        <img
          src="<%= post.photoUrl %>"
          alt="Post Image"
          style="max-width: 200px; margin-top: 10px; border-radius: 5px"
        />
        <% } %>
        <a href="/post/<%= post._id %>" class="viewdetailsbtn">View Details</a>
      </div>
      <hr />
      <% }) %>

      </div>
    </div>
  </body>
</html>
